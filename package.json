{
  "name": "repobuddy",
  "version": "1.0.0",
  "private": true,
  "description": "Handles the boring work of repository management",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "homepage": "https://github.com/repobuddy",
  "license": "MIT",
  "author": "Homa Wong <homawong@gmail.com>",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist cjs",
    "coverage": "jest --coverage",
    "lint": "eslint --ext=js,ts .",
    "nuke": "yarn clean && rimraf node_modules",
    "start": "probot run ./cjs/index.js",
    "test": "jest",
    "verify": "run-p verify:build coverage",
    "verify:build": "npm-run-all clean build",
    "watch": "jest --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "probot": "^12.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^17.0.8",
    "eslint": "^8.6.0",
    "eslint-plugin-harmony": "^6.0.0",
    "husky": "^7.0.0",
    "jest": "^29.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "nock": "^13.0.5",
    "npm-run-all2": "^5.0.0",
    "rimraf": "^3.0.2",
    "smee-client": "^1.2.2",
    "ts-jest": "^29.0.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
